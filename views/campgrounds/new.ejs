<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Campground</h1>

  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          placeholder="Enter Campground Title"
          class="form-control"
          name="title"
          id="title"
          required
        />
        <div class="valid-feedback">Look Good!</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          placeholder="Enter Campground Location"
          class="form-control"
          name="location"
          id="location"
          required
        />
        <div class="valid-feedback">Look Good!</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            id="price"
            name="price"
            class="form-control"
            placeholder="0"
            aria-label="price"
            aria-describedby="price-label"
            required
          />
          <div class="valid-feedback">Look Good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          type="text"
          class="form-control"
          name="image"
          id="image"
          placeholder="Enter Campground Price"
          required
        />
        <div class="valid-feedback">Look Good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          class="form-control"
          name="description"
          id="description"
          placeholder="Enter Campground Description"
          required
        ></textarea>
        <div class="valid-feedback">Look Good!</div>
      </div>
      <button class="btn btn-success">Create New Campground</button>
    </form>
  </div>
</div>
